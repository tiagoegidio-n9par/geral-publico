{
  "$schema": "https://design-tokens.github.io/community-group/format/",
  "brand": "Grupo N9 Participações",
  "version": "1.1.0",
  "updated": "2026-02-09",
  "concept": {
    "name-origin": "N9 = Número 9",
    "logo-description": "Elefante estilizado: a letra N forma o corpo e o número 9 forma a cabeça com a orelha",
    "symbolism": "Força, memória, sabedoria e longevidade",
    "style": "Minimalista, geométrico, contemporâneo, sóbrio"
  },

  "color": {
    "palette": {
      "primary":          { "value": "#2C3E50", "description": "Primary brand color" },
      "accent":           { "value": "#333333", "description": "Accent / text dark" },
      "secondary":        { "value": "#555555", "description": "Secondary text" },
      "text-light":       { "value": "#7F8C8D", "description": "Light text / muted" },
      "bg-light":         { "value": "#F8F9FA", "description": "Light background" },
      "white":            { "value": "#FFFFFF", "description": "White" },
      "black":            { "value": "#000000", "description": "Black" },
      "primary-dark":     { "value": "#1A252F", "description": "Darkened primary" },
      "primary-light":    { "value": "#3D5166", "description": "Lightened primary" },
      "gray-mid":         { "value": "#6C7A89", "description": "Intermediate gray" },
      "gray-light-med":   { "value": "#BDC3C7", "description": "Light medium gray" },
      "gray-lighter":     { "value": "#D5DBDB", "description": "Lighter gray" },
      "bg-alt":           { "value": "#ECF0F1", "description": "Alternate background" },
      "gray-neutral":     { "value": "#95A5A6", "description": "Neutral gray" }
    },
    "bi": {
      "tab-active-bg":        { "value": "#FFFFFF" },
      "tab-active-text":      { "value": "#2C3E50" },
      "tab-inactive-bg":      { "value": "#F8F9FA" },
      "tab-inactive-text":    { "value": "#7F8C8D" },
      "view-active-bg":       { "value": "#F8F9FA" },
      "view-active-text":     { "value": "#2C3E50" },
      "view-inactive-bg":     { "value": "transparent" },
      "view-inactive-text":   { "value": "#7F8C8D" },
      "title":                { "value": "#2C3E50" },
      "tab-bar":              { "value": "#F8F9FA" }
    },
    "print-cmyk": {
      "primary":          { "C": 83, "M": 60, "Y": 42, "K": 35, "pantone": "7545 C" },
      "accent":           { "C": 0,  "M": 0,  "Y": 0,  "K": 87, "pantone": "Black 7 C" },
      "secondary":        { "C": 0,  "M": 0,  "Y": 0,  "K": 67 },
      "text-light":       { "C": 10, "M": 3,  "Y": 3,  "K": 42 },
      "primary-dark":     { "C": 85, "M": 60, "Y": 40, "K": 55 },
      "primary-light":    { "C": 65, "M": 45, "Y": 30, "K": 20 },
      "gray-mid":         { "C": 22, "M": 10, "Y": 5,  "K": 40 },
      "gray-neutral":     { "C": 12, "M": 4,  "Y": 4,  "K": 28, "pantone": "Cool Gray 7 C" },
      "gray-light-med":   { "C": 5,  "M": 2,  "Y": 2,  "K": 15 },
      "gray-lighter":     { "C": 3,  "M": 1,  "Y": 1,  "K": 8 },
      "bg-alt":           { "C": 3,  "M": 1,  "Y": 1,  "K": 2 },
      "bg-light":         { "C": 1,  "M": 0,  "Y": 0,  "K": 1 }
    }
  },

  "typography": {
    "font-family": {
      "primary": "'Helvetica Neue', Helvetica, 'Nunito Sans', Arial, sans-serif",
      "digital-alt": "'Source Sans Pro', 'Open Sans', sans-serif",
      "bi-dashboard": "Segoe UI, 'Helvetica Neue', sans-serif",
      "email-fallback": "Arial, Calibri, Helvetica, sans-serif",
      "monospace": "'SF Mono', 'Fira Code', 'Cascadia Code', monospace"
    },
    "heading": {
      "h1": { "size": "2.25rem", "weight": 700, "line-height": 1.2,  "color": "#2C3E50" },
      "h2": { "size": "1.875rem", "weight": 700, "line-height": 1.25, "color": "#2C3E50" },
      "h3": { "size": "1.5rem",   "weight": 700, "line-height": 1.3,  "color": "#333333" },
      "h4": { "size": "1.25rem",  "weight": 600, "line-height": 1.35, "color": "#333333" }
    },
    "body": {
      "regular": { "size": "1rem",     "weight": 400, "line-height": 1.6,  "color": "#555555" },
      "small":   { "size": "0.875rem", "weight": 400, "line-height": 1.5,  "color": "#7F8C8D" },
      "caption": { "size": "0.75rem",  "weight": 400, "line-height": 1.4,  "color": "#95A5A6" }
    }
  },

  "spacing": {
    "1": "0.25rem", "2": "0.5rem", "3": "0.75rem", "4": "1rem",
    "6": "1.5rem", "8": "2rem", "12": "3rem", "16": "4rem"
  },

  "radius": {
    "sm": "4px", "md": "8px", "lg": "12px", "xl": "16px"
  },

  "shadow": {
    "sm": "0 1px 2px rgba(26, 37, 47, 0.06)",
    "md": "0 4px 12px rgba(26, 37, 47, 0.08)",
    "lg": "0 8px 24px rgba(26, 37, 47, 0.12)"
  },

  "logo": {
    "format": "PNG com fundo transparente (RGBA). Nunca usar JPG com fundo sólido.",
    "construction": "N = corpo do elefante, 9 = cabeça com orelha. Olho = ponto branco.",
    "files": {
      "full": "logo_transparent.png (elefante + texto GRUPO N9)",
      "icon": "icon_transparent.png (apenas elefante, sem texto)"
    },
    "minimum-size": {
      "print-full":   "30mm largura",
      "digital-full": "120px largura",
      "print-icon":   "12mm largura",
      "digital-icon": "32px x 32px"
    },
    "protection-zone": "1x ao redor (x = altura do olho do elefante)",
    "color": {
      "body": "~#4B4B4D (cinza escuro)",
      "eye": "#FFFFFF (branco)",
      "text": "~#494B4D (cinza escuro)"
    }
  }
}
